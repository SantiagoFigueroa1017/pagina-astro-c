---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- <slot /> -->
		<header>
			<div class="container">
				<div class="flex-menu">
					<img
						src="https://store.akamai.steamstatic.com/public/shared/images/header/logo_steam.svg?t=962016"
						alt=""
					/>
					<menu>
						<li><a href="#">Tienda</a></li>
						<li><a href="#">Comunidad</a></li>
						<li><a href="#">Acerca de</a></li>
						<li><a href="#">Soporte</a></li>
					</menu>
				</div>
				<div class="menu-right">
					<menu>
						<a href="#" class="btn-download">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="size-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
								></path>
							</svg>
							Instalar Steam
						</a>

						<a href="#">Iniciar Sesión</a>

						|

						<a href="#">Idioma</a>
					</menu>
				</div>
			</div>
		</header>
		<div class="banner">
			<div class="menu-search">
				<menu>
					<a href="#">Tu tienda</a>
					<a href="#">Nuevo y destacable</a>
					<a href="#">categorías</a>
					<a href="#">Tienda de puntos</a>
					<a href="#">Noticias</a>
					<a href="#">Laboratorios</a>
					<input type="search" id="buscar" placeholder="buscar" />
				</menu>
			</div>
		</div>
		<div class="left-menu"></div>
		<div class="banner2 container"></div>

		<div class="banner3"></div>
	</body>
</html>
<style>
	html,
	body {
		padding: 0;
		margin: 0;
	}

	header {
		height: 80px;
		background: #161d24;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.flex-menu {
		display: flex;
		height: 80px;
		width: 60%;
		float: left;
		align-items: center;
		color: #f6f2f2;
		font-family: sans-serif;
		text-transform: uppercase;
	}

	.flex-menu a {
		color: #d6c9c9;
		font-weight: 600;
		text-decoration: none;
	}

	.flex-menu a:hover {
		color: #fff;
	}

	.flex-menu img {
		width: 160px;
	}

	.flex-menu li {
		margin-left: 10px;
		list-style: none;
		display: inline-block;
	}

	.menu-right {
		color: #d6c9c9;
		font-family: sans-serif;
		float: right;
		margin-top: 8px;
		width: 40%;
	}

	.menu-right a {
		margin: 0 8px;
		color: #d6c9c9;
		text-decoration: none;
	}

	.menu-right a:hover {
		color: #fff;
	}

	.btn-download {
		color: #fff;
		background-color: #789806;
		display: inline-block;
		padding: 4px 6px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		gap: 8px;
		align-items: center;
	}

	.btn-download svg {
		width: 18px;
	}

	.btn-download:hover {
		background-color: rgb(46, 173, 46);
	}

	.banner {
		background: orange;
		height: 360px;
	}
	
	
	.menu-search {
		display: flex;
		margin: 0 20% 0 20%;
		background-color: aqua;
		height: 60px;
		align-items: center;
		justify-content: center;
		gap: 20px;
	}

	.banner2 {
		position: relative;
		background: purple;
		height: 240px;
	}

	.left-menu {
		background: pink;
		width: 180px;
		height: 360px;
		z-index: 10;
		position: sticky;
		top: 0;
		left: -180px;
	}

	.banner3 {
		background-color: turquoise;
		height: 1200px;
	}
</style>
